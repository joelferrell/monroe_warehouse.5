<%- model_class = Mileagelog -%>
<div class="page-header">
  <h1><%=t '.title', :default => Mileagelog %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:starting_mile) %></th>
      <th><%= model_class.human_attribute_name(:ending_mile) %></th>
      <th><%= model_class.human_attribute_name(:rate) %></th>
      <th><%= model_class.human_attribute_name(:total_miles) %></th>
      <th><%= model_class.human_attribute_name(:mile_total_cost) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @mileagelogs.each do |mileagelog| %>
      <tr>
        <td><%= mileagelog.id %></td>
        <td><%= mileagelog.starting_mile %></td>
        <td><%= mileagelog.ending_mile %></td>
        <td><%= mileagelog.rate %></td>
        <td><%= mileagelog.total_miles %></td>
        <td><%= mileagelog.mile_total_cost %></td>
        <td><%=l mileagelog.created_at, format: :long %></td>
        <td>
          <%= link_to mileagelog_path(mileagelog), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to mileagelog_path(mileagelog), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mileagelog_path,
            :class => 'btn btn-primary' %>
