<%= simple_form_for(@part) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :part_number %>
    <%= f.input :part_description %>
    <%= f.input :unit_price %>
    <%= f.input :unit_quantity %>
    <%= f.input :parts_total %>
    <%= f.input :tax %>
    <%= f.input :shipping_cost %>
    <%= f.input :invoice %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
